{
  "arrowParens": "always",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "useTabs": false,
  "printWidth": 120,
  "tabWidth": 2,
  "endOfLine": "lf",
  "apexInsertFinalNewline": false,
  "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    }
  ]
}
